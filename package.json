{
  "name": "absolute-version",
  "version": "2.0.0",
  "description": "Reads your git tags to generate a unique human-readable version for every git commit",
  "main": "dist/index.js",
  "bin": {
    "absolute-version-from-git-tag": "dist/bin/absolute-version-from-git-tag.js"
  },
  "scripts": {
    "prebuild": "rimraf dist && npm run lint && npm run format:check && npm run test",
    "build": "tsc --project tsconfig.dist.json",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts' --ext .ts --config .eslintrc.json",
    "format:base": "prettier \"src/**/*.{ts,js}\"",
    "format:fix": "npm run format:base -- --write",
    "format:check": "npm run format:base -- --check",
    "prerelease": "npm run build",
    "release": "commit-and-tag-version"
  },
  "keywords": [
    "pact",
    "version",
    "git",
    "tag",
    "semver"
  ],
  "author": "Timothy Jones",
  "license": "MIT",
  "repository": "https://github.com/absolute-version/absolute-version-js",
  "devDependencies": {
    "@pact-foundation/pact-js-prettier-config": "^1.0.0",
    "@types/git-rev-sync": "^2.0.2",
    "@types/jest": "^27.5.1",
    "@types/semver": "^7.5.8",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "commit-and-tag-version": "^12.4.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript-lite": "^13.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^26.2.2",
    "jest": "^28.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.8",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "git-describe": "^4.1.1",
    "git-rev-sync": "^3.0.1",
    "semver": "^7.6.3",
    "yargs": "^17.1.0"
  },
  "commit-and-tag-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Fixes and Improvements"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  }
}
