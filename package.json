{
  "name": "@pact-foundation/absolute-version",
  "version": "0.0.4",
  "description": "Reads your git tags to generate a unique human-readable version for every git commit",
  "main": "dist/index.js",
  "bin": {
    "absolute-version-from-git-tag": "dist/bin/absolute-version-from-git-tag.js"
  },
  "scripts": {
    "prebuild": "rimraf dist && npm run lint && npm run format:check && npm run test",
    "build": "tsc --project tsconfig.dist.json",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts' --ext .ts --config .eslintrc.json",
    "format:base": "prettier \"src/**/*.{ts,js}\"",
    "format:fix": "npm run format:base -- --write",
    "format:check": "npm run format:base -- --check",
    "prerelease": "npm run build",
    "release": "standard-version"
  },
  "keywords": [
    "pact",
    "version",
    "git",
    "tag",
    "semver"
  ],
  "author": "Timothy Jones",
  "license": "MIT",
  "devDependencies": {
    "@pact-foundation/pact-js-prettier-config": "^1.0.0",
    "@types/git-rev-sync": "^2.0.0",
    "@types/semver": "^7.3.4",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-typescript-lite": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.1",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "git-describe": "^4.1.0",
    "git-rev-sync": "^3.0.1",
    "semver": "^7.3.4",
    "yargs": "^17.1.0"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Fixes and Improvements"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ]
  }
}
